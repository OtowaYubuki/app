
<h1>ログインアプリ</h1>

<% if user_signed_in? %> <!-- ユーザーがログインしているか調べる -->
  <!-- ユーザーがログインしていた時の処理 -->
 <h2 id="name"><%= current_user.name %></h2>
 <h3 id ="menu">メニュー</h3>
  <h4> メールアドレス： <%= current_user.email %> </h4>
  <p><%= link_to "登録済みルーム一覧", rooms_path %></p>
  <p><%= link_to "ルーム登録", new_room_path%></p>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %> <!-- ログアウトをする -->
<% else %>
  <!-- ユーザーがログインしていなかった時の処理 -->
  <button id ="sign_in"><%= link_to "ログイン", new_user_session_path, class: 'post' %></button>
  <button id ="sign_up"><%= link_to "新規登録", new_user_registration_path, class: 'post' %></button>
<% end %>