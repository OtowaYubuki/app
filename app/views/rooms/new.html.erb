<div id ="room_new">
 <h3>ルーム情報登録</h3> 
 
  <%= form_with model: @Room do |f| %>
   <table>
    <tr>
     <th><%= f.label :name ,"ルーム名" %></th>
     <td><%= f.text_field :name %></td>
    </tr>
    <tr>
     <th><%= f.label :introduction ,"ルーム紹介" %></th>
     <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
     <th><%= f.label :price ,"料金" %></th>
     <td><%= f.text_field :price %></td>
    </tr>
    <tr>
     <th><%= f.label :adress ,"住所" %></th>
     <td><%= f.text_area :adress %></td>
    </tr>
   </table>
 
    <div>
      <ul>
        <li><%= f.submit "登録完了する"%></li>
      </ul>
    </div>
  <% end %>
</div>